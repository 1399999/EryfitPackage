<Window x:Class="EryfitPackageUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EryfitPackageUI"
        mc:Ignorable="d"
        Title="Home" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1"/>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />

        </Grid.RowDefinitions>

        <TextBlock MinHeight="30" Grid.Row="1">Eryfit Tools:</TextBlock>

        <ListBox Grid.Row="2">
            <ItemsControl>Word</ItemsControl>
            <ItemsControl>Refrencer</ItemsControl>
            <ItemsControl>Calculator</ItemsControl>
        </ListBox>
    </Grid>
</Window>
